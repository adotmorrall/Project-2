<div id="reviews">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>{{msg}}</h1>
                <h2>This is our Review Page!</h2>
                <form class="clearfix mb-4" method="POST">
                    <div class="form-group">
                        {{!-- <label for="review-text">Review Text</label>
                        <input type="text" id="review-text" class="form-control" aria-describedby="review-text"
                            placeholder="Enter Review Text"> --}}
                    </div>
                    <div class="form-group">
                        <label for="review-description">Write a review</label>
                        <textarea class="form-control" id="review-description" aria-describedby="review-description"
                            placeholder="Tired of sobby melodramas and stupid comedies? Why not watch a film with a difference? American Beauty by Sam Mendes is both a drama and a comedy, which definitely absorbed the best features of the genres, creating a powerful and mind-boggling cocktail of love, hatred, sinful passion, rebellion, loneliness, fear and total liberation."></textarea>
                    </div>
                    <button id="submit" class="btn btn-primary float-right">Submit</button>
                </form>
                <h3>Reviews:</h3>
                <ul id="review-list" class="list-group">
                    {{#each reviews}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <a href="review/{{this.id}}">{{this.text}}</a>
                        <button class="btn btn-danger float-right delete">ï½˜</button>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/reviews.js"></script>